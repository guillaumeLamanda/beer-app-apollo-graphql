{
  "name": "@ba/server",
  "version": "1.0.0",
  "description": "Beer App GraphQL server",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "start": "node dist/bundle.js",
    "build": "webpack --mode=production",
    "build:watch": "webpack --watch --mode=development",
    "db:generate": "prisma generate",
    "dev": "yarn build:watch & nodemon -w dist/ dist/main.js",
    "generate": "graphql-codegen --config codegen.yml",
    "lint": "eslint src/ --ext=ts",
    "postinstall": "yarn db:generate"
  },
  "devDependencies": {
    "@ba/eslint-config": "1.0.0",
    "@graphql-codegen/cli": "1.13.3",
    "@graphql-codegen/introspection": "^1.13.3",
    "@graphql-codegen/typescript": "1.17.11",
    "@graphql-codegen/typescript-resolvers": "1.13.3",
    "@prisma/cli": "^2.10.1",
    "@types/express": "^4.17.9",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^13.13.2",
    "copy-webpack-plugin": "^6.2.1",
    "dotenv-webpack": "^5.0.0",
    "graphql-tag": "^2.10.3",
    "ts-loader": "^8.0.7",
    "ts-node": "^9.0.0",
    "webpack": "^5.3.0",
    "webpack-cli": "^4.1.0",
    "webpack-node-externals": "^2.5.2"
  },
  "dependencies": {
    "@ba/schema": "*",
    "@prisma/client": "^2.10.1",
    "apollo-datasource": "^0.7.0",
    "apollo-datasource-rest": "^0.9.5",
    "apollo-server": "^2.18.2",
    "graphql": "^14.0.0",
    "graphql-subscriptions": "^1.1.0",
    "jsonwebtoken": "^8.5.1"
  },
  "peerDependencies": {
    "lru-cache": "*"
  }
}
