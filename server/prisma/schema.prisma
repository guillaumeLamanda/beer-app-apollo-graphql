generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model Beer {
  id    String @id
  users User[]
}

model User {
  id        String   @id @default(uuid())
  name      String   @unique
  token     String?
  beers     Beer[]   @relation
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
